<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sadik_fodamy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#EC381C</item>
        <item name="colorPrimaryVariant">#212529</item>
        <item name="colorOnPrimary">#6C757D</item>
        <item name="colorOnBackground">#FFFFFF</item>



        <!-- Secondary brand color. -->

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="PrimaryButtonLarge.Fodamy" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundColor">?colorPrimary</item>
        <item name="android:textColor">?colorOnBackground</item>





    </style>
    <style name="PrimaryButtonSmallBorder.Fodamy" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundColor">?colorOnBackground</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">1dp</item>



    </style>

    <style name="AlertButton.Fodamy" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundColor">#707070</item>
        <item name="android:textColor">@color/black</item>





    </style>

</resources>